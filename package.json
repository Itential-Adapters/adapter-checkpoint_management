{
  "name": "@itential/adapter-checkpoint",
  "version": "0.1.0",
  "description": "This adapter integrates with system Checkpoint",
  "main": "adapter.js",
  "templateVersion": "1.3.0",
  "scripts": {
    "encode:props": "echo \"{\\\"encrypt\\\":true,\\\"paths\\\":[\\\"./core/\\\",\\\"./brokers/\\\",\\\"./\\\"]}\" > encoder_props.json",
    "encode:clean": "rm encoder_props.json",
    "encode:rm": "find . -name '*.bin' -type f -delete || exit",
    "encode:run": "node node_modules/@itential/itential-utils/Encoder.js encoder_props.json",
    "encode": " npm run encode:props && npm run encode:run && npm run encode:clean",
    "lint": "eslint . --ext .json --ext .js",
    "test:unit": "mocha test/unit/adapterTestUnit.js --LOG=error",
    "test:integration": "mocha test/integration/adapterTestIntegration.js --LOG=error",
    "test:cover": "nyc --reporter html --reporter text mocha --reporter dot test/*",
    "test": "npm run test:unit && npm run test:integration",
    "deploy": "npm publish --registry https://registry.aws.itential.com/repositories/itential-internal/",
    "build": "npm run bundle && npm run deploy",
    "bundle": "bundled-dependencies"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">= 0.12.7"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:itential/product-adapters/prototypes/adapter-checkpoint.git"
  },
  "author": "Itential",
  "homepage": "https://gitlab.com:itential/product-adapters/prototypes/adapter-checkpoint.git",
  "dependencies": {
    "@itential/adapter-utils": "file:./deps/itential-adapter-utils-4.3.0.tgz",
    "ajv": "^6.5.1",
    "async-lock": "^1.0.0",
    "fs-extra": "^7.0.0",
    "mongodb": "^2.2.33",
    "querystring": "^0.2.0",
    "shelljs": "^0.8.2",
    "uuid": "^3.1.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "bundled-dependencies": "^2.1.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-json": "^1.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "testdouble": "^3.8.1",
    "winston": "^2.4.0"
  },
  "peerDependencies": {
    "@itential/pronghorn-core": "5.x || 6.x"
  },
  "bundledDependencies": [
    "@itential/adapter-utils"
  ]
}
